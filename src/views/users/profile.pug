extends ../base 
include ../mixins/video

block content 
    div.profile__data
        if (loggedInUser.avatarUrl)
            img(src="/" + user.avatarUrl).avatar
        else
            div.nonAvatar Non Image
        h3=user.name
    div.video-grid
        each video in user.videos
            +video(video)
        else
            span.empty__message No videos found 